<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>libs-assembly</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../build/bin/Debug</directory>
			<outputDirectory>META-INF/lib/osx_64</outputDirectory>
			<includes>
				<include>*.dylib</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../build/bin/Debug</directory>
			<outputDirectory>META-INF/lib/windows_64</outputDirectory>
			<includes>
				<include>*.dll</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../build/bin/Debug</directory>
			<outputDirectory>META-INF/lib/linux_64</outputDirectory>
			<includes>
				<include>*.so</include>
			</includes>
		</fileSet>
	</fileSets>
	<!-- TODO delete dependencies (for debug purposes) -->
	<dependencySets>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <unpack>true</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
