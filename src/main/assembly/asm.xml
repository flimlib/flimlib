<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${scijava.natives.classifier}</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/natives</directory>
			<!-- This is exactly natives/<what ever follows "natives-" in scijava.natives.classifier> -->
			<outputDirectory>natives/${scijava.platform.family.medium}_${scijava.platform.bits}</outputDirectory>
			<includes>
				<include>**/*.so</include>
				<include>**/*.dylib</include>
				<include>**/*.jnilib</include>
				<include>**/*.dll</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
